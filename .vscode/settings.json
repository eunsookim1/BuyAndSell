{
  "files.associations": {
    ".eslintrc": "jsonc",
    ".prettierrc": "jsonc",
    ".eslintignore": "ignore"
  },

  "eslint.validate": [
    "html"
  ],

  "javascript.validate.enable": false,
  "javascript.format.enable": false,

  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "package-lock.json": true
  }
}
